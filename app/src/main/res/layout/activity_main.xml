<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.HomePageActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ViewFlipper
                    android:id="@+id/header_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoStart="true"
                    android:flipInterval="2000">

                    <ImageView
                        android:id="@+id/header_image1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ef" />

                    <ImageView
                        android:id="@+id/header_image2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ef_image" />

                    <ImageView
                        android:id="@+id/header_image3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ef_map" />

                    <ImageView
                        android:id="@+id/header_image4"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ef_logo" />

                </ViewFlipper>

                <GridLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_gravity="bottom">

                    <RelativeLayout
                        android:id="@+id/artists_button"
                        android:minHeight="100dp"
                        android:layout_gravity="fill"
                        android:background="#9FA8DA"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:stateListAnimator="@anim/raise"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/venue_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_group_work" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@id/venue_icon"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:text="Artists" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/map_button"
                        android:minHeight="100dp"
                        android:layout_gravity="fill"
                        android:background="#1976D2"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:stateListAnimator="@anim/raise"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/map_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_map" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/map_icon"
                                android:text="Map"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/favorites_button"
                        android:minHeight="100dp"
                        android:layout_gravity="fill"
                        android:background="#3F51B5"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:stateListAnimator="@anim/raise"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/favorites_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_favorite" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@id/favorites_icon"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Favs" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/friends_button"
                        android:minHeight="100dp"
                        android:layout_gravity="fill"
                        android:background="#2196F3"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:stateListAnimator="@anim/raise"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/friends_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_group" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@id/friends_icon"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Friends" />

                        </LinearLayout>

                    </RelativeLayout>



                </GridLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>
