<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.HomePageActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/header_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/ef" />

            <GridLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header_image"
                android:columnCount="2"
                android:rowCount="3">

                <Button
                    android:id="@+id/find_me_button"
                    android:background="#90CAF9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="Find Me"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:drawableTop="@drawable/ic_location_on"
                    android:drawablePadding="0dp"
                    android:paddingTop="20dp"
                    />

                <Button
                    android:id="@+id/near_me_button"
                    android:background="#9FA8DA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="Near Me"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:drawableTop="@drawable/ic_library_music"
                    android:drawablePadding="0dp"
                    android:paddingTop="20dp"
                    />

                <Button
                    android:id="@+id/friends_button"
                    android:background="#2196F3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:drawableTop="@drawable/ic_group"
                    android:text="Friends"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:drawablePadding="0dp"
                    android:paddingTop="20dp"
                    />

                <Button
                    android:id="@+id/favorites_button"
                    android:background="#3F51B5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:drawableTop="@drawable/ic_favorite"
                    android:text="Favorites"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:drawablePadding="0dp"
                    android:paddingTop="20dp"
                    />

                <Button
                    android:id="@+id/map_button"
                    android:background="#1976D2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:drawableTop="@drawable/ic_map"
                    android:text="Map"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:drawablePadding="0dp"
                    android:paddingTop="20dp"
                    android:onClick="mapPresed"
                    />

                <Button
                    android:id="@+id/settings_button"
                    android:background="#303F9F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:drawableTop="@drawable/ic_settings"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:drawablePadding="0dp"
                    android:paddingTop="20dp"
                    android:onClick="settingsPressed"
                    />

            </GridLayout>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>
