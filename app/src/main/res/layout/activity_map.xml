<RelativeLayout
    tools:context=".MapPageActivity"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locinfo"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/color_spinner"
        android:layout_below="@id/locinfo"
        android:entries="@array/color_array"
        android:prompt="@string/color_prompt"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapkey_spinner"
        android:layout_below="@id/locinfo"
        android:layout_alignParentRight="true"
        />

    <fragment
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/mapkey_spinner"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/share_button_on"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        android:src="@drawable/share_location_button_icon_on"
        fab:fab_colorNormal="@color/PrimaryColor"
        fab:fab_colorPressed="@color/PrimaryDarkColor"
        fab:fab_colorRipple="@color/PrimaryColor"
        />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/share_button_off"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        android:src="@drawable/share_location_button_icon_off"
        fab:fab_colorNormal="@color/PrimaryColor"
        fab:fab_colorPressed="@color/PrimaryDarkColor"
        fab:fab_colorRipple="@color/PrimaryColor"
        />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/navigate_to_friend_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/share_button_on"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        android:src="@drawable/ic_group"
        fab:fab_colorNormal="@color/PrimaryColor"
        fab:fab_colorPressed="@color/PrimaryDarkColor"
        fab:fab_colorRipple="@color/PrimaryColor"
        />

</RelativeLayout>

