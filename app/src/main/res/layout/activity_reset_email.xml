<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#5dece4" >

    <ImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:id="@+id/reset_email_header_image"
        android:src="@drawable/ic_lock_black_24dp"
        android:padding="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Email"
        android:layout_toRightOf="@+id/reset_email_header_image"
        android:textSize="32dp"
        android:textColor="@android:color/black"
        android:padding="10dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/reset_email_current_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_email_header_image">

        <EditText
            android:id="@+id/reset_email_current_edittext"
            android:hint="Current E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/reset_email_new_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_email_current_layout">

        <EditText
            android:id="@+id/reset_email_new_edittext"
            android:hint="New E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/reset_email_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_email_new_layout"
        android:text="Reset E-mail"
        android:layout_marginTop="16dp"
        android:background="@color/settings_background" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_email_button"
        android:text="Cancel"
        android:layout_marginTop="16dp"
        android:background="@color/settings_background" />

</RelativeLayout>