<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_header_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/ic_settings_black_24dp"
            android:padding="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_toRightOf="@+id/settings_header_image"
            android:textSize="56dp"
            android:textColor="@android:color/black"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/settings_reset_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Image"
        android:layout_below="@id/settings_header_image"
        android:textSize="26dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:padding="16dp"
        android:background="@drawable/settings_page_button"
        android:textAllCaps="false"
        android:drawablePadding="32dp"
        android:drawableLeft="@drawable/ic_account_box_black_24dp" />

    <Button
        android:id="@+id/settings_reset_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Email"
        android:layout_below="@id/settings_reset_image"
        android:textSize="26dp"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:gravity="left"
        android:background="@drawable/settings_page_button"
        android:textAllCaps="false"
        android:drawablePadding="32dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp" />

    <Button
        android:id="@+id/settings_reset_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Username"
        android:layout_below="@id/settings_reset_email"
        android:textSize="26dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:padding="16dp"
        android:background="@drawable/settings_page_button"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="32dp" />

    <Button
        android:id="@+id/settings_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:layout_below="@id/settings_reset_username"
        android:textSize="26dp"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:gravity="left"
        android:background="@drawable/settings_page_button"
        android:textAllCaps="false"
        android:drawablePadding="32dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp" />

</LinearLayout>