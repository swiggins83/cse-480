<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/ic_music_note"
            android:src="@drawable/ic_music_note"
            android:padding="10dp"
            android:tint="@color/colorPrimary"
            android:layout_marginTop="5dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artists List"
            android:layout_toRightOf="@+id/ic_music_note"
            android:textSize="32dp"
            android:textColor="@android:color/white"
            android:background="?attr/colorPrimaryDark"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/artist_list"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_below="@id/ic_music_note"
            android:scaleType="centerCrop"
            android:src="@drawable/artists_list" />


        <LinearLayout
            android:id="@+id/artist_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_below="@+id/artist_list">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/artist_location_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="16dp"
                android:layout_weight="20"
                android:layout_gravity="center"
                android:src="@drawable/BORGEOUS" />

            <LinearLayout
                android:id="@+id/artist_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:padding="16dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/show_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Borgeous"
                    android:textSize="30sp"
                    android:layout_gravity="center|center_vertical"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/Imageview"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:padding="16dp"
                android:layout_weight="30"
                android:layout_gravity="left"
                android:src="@drawable/ef" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_below="@+id/artist_one">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/artist_location_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="16dp"
                android:layout_weight="20"
                android:layout_gravity="center"
                android:src="@drawable/BreakSci" />

            <LinearLayout
                android:id="@+id/artist_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:padding="16dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/show_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Break Science"
                    android:textSize="30sp"
                    android:layout_gravity="center|center_vertical"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/Imageview"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:padding="16dp"
                android:layout_weight="30"
                android:layout_gravity="left"
                android:src="@drawable/ef" />

        </LinearLayout>






</RelativeLayout>